<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.navigation.FragmentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/firstlayer">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilehome"
                    android:layout_width="@dimen/dimen150"
                    android:layout_height="@dimen/dimen150"
                    android:layout_marginTop="@dimen/dimen80"
                    android:layout_marginBottom="@dimen/dimen30"
                    android:src="@drawable/profile"/>

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/secondlayer">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen40"
                android:layout_marginTop="@dimen/dimen20"
                android:layout_marginBottom="@dimen/dimen32">

                <TextView
                    android:id="@+id/satu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perkenalkan Saya"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/dimensp18" />

                <TextView
                    android:id="@+id/dua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adi Chandra N."
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="@dimen/dimen4"
                    android:textSize="@dimen/dimensp18"
                    android:layout_toRightOf="@id/satu"/>

                <TextView
                    android:id="@+id/tiga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saya Lahir di"
                    android:layout_below="@id/satu"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/dimensp18" />

                <TextView
                    android:id="@+id/empat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/dimen4"
                    android:text="Bandung, 19 September"
                    android:layout_below="@id/satu"
                    android:layout_toEndOf="@id/tiga"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/dimensp18" />

                <TextView
                    android:id="@+id/lima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="2000. "
                    android:layout_below="@id/empat"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/dimensp18" />

                <TextView
                    android:id="@+id/enam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saya anak"
                    android:layout_below="@id/empat"
                    android:layout_toEndOf="@id/lima"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/dimensp18" />

                <TextView
                    android:id="@+id/tujuh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/dimen4"
                    android:text="Pertama"
                    android:layout_below="@id/empat"
                    android:layout_toEndOf="@id/enam"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/dimensp18" />

                <TextView
                    android:id="@+id/delapan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen4"
                    android:text="Dari dua"
                    android:layout_below="@id/empat"
                    android:layout_toEndOf="@id/tujuh"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/dimensp18" />

                <TextView
                    android:id="@+id/sembilan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bersaudara."
                    android:layout_below="@id/tujuh"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/dimensp18" />


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen30"
            android:layout_marginStart="@dimen/dimen40"
            android:layout_marginEnd="@dimen/dimen20">

            <TextView
                android:id="@+id/txt_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen10"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/dimensp28"
                android:text="Social Media"
                android:textColor="@color/black"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_social"
                android:backgroundTint="@color/white"
                android:layout_margin="@dimen/dimen16"
                android:src="@drawable/facebook"
                tools:ignore="ContentDescription" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/insta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_social"
                android:layout_toEndOf="@id/facebook"
                android:layout_margin="@dimen/dimen16"
                android:backgroundTint="@color/white"
                android:src="@drawable/instagram"
                tools:ignore="ContentDescription" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_social"
                android:layout_toEndOf="@id/insta"
                android:layout_margin="@dimen/dimen16"
                android:backgroundTint="@color/white"
                android:src="@drawable/github"
                tools:ignore="ContentDescription" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_social"
                android:layout_toEndOf="@id/github"
                android:layout_margin="@dimen/dimen16"
                android:backgroundTint="@color/white"
                android:src="@drawable/whatsapp"
                tools:ignore="ContentDescription" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/maps"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/facebook"
                android:layout_marginTop="@dimen/dimen30"
                android:scaleType="center"
                app:neumorph_shapeType="basin"
                android:textColor="@color/black"
                android:text="Find Me"/>

            <soup.neumorphism.NeumorphButton
                android:id="@+id/about"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/maps"
                android:layout_marginTop="@dimen/dimen10"
                android:scaleType="center"
                app:neumorph_shapeType="basin"
                android:textColor="@color/black"
                android:text="About Apps"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>