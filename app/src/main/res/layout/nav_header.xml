<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen220"
    android:background="@color/denim"
    android:paddingTop="@dimen/dimen16"
    android:paddingRight="@dimen/dimen16"
    android:paddingLeft="@dimen/dimen16"
    android:layout_marginBottom="-40dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageHeader"
        android:layout_width="@dimen/dimen60"
        android:layout_height="@dimen/dimen60"
        android:layout_marginTop="@dimen/dimen60"
        android:layout_marginLeft="@dimen/dimen10"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imageHeader"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen20">

        <TextView
            android:id="@+id/nameHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen20"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10118015"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/dimensp18"
            android:paddingTop="@dimen/dimen5"/>
    </LinearLayout>




</RelativeLayout>